{% extends 'base.html.twig' %}


{% block title %}Hello{% endblock %}

{% block body %}
    <section class="Annonces">
        {% for annonce in annonceAll  %}
        <article >
            <br>
            <h1 style="text-align: center">Annonces</h1>
            <br><hr><br>
            <div class="content">
                <P><h2>{{ annonce.title }}</h2></P>

                <h4>Categorie</h4>
                <P>{{ annonce.category }}</P>
                <img src="{{asset('uploads/brochures/' ~ annonce.photo)}}" alt="">
                <br>
                <div class="metadata">Post√© le {{ annonce.createAt|date }}</div>
                <br>
                <p>{{ annonce.description }}</p>

                <a href="{{ path('annonce_show') }}" class="btn btn-primary">Voir l'annonce</a>
            </div>
        </article>
        {% endfor %}
    </section>
{% endblock %}
